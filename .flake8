# .flake8
[flake8]
# Максимальная длина строки
max-line-length = 79

# Игнорируемые предупреждения
ignore = E203, W503

# Выбранные категории проверок
select = B,C,E,F,W,T4

# Исключить некоторые пути
exclude = 
    __init__.py,
    app/migrations/,
    app/migrations/*,
    migrations/,
    migrations/*,
    tests/*,
    venv/,
    .venv/,
    env/,
    .env,
    .git,
    .tox,
    .eggs,
    *.egg,
    build/,
    dist/,
    *.pyc,
    *.pyo,
    *.pyd,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov/,
    .tox/,
    .eggs/,
    *.egg-info/,
    .vscode/,
    .idea/